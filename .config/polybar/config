[module/timer]

type = custom/script

exec = ~/.scripts/polybar-timer.sh tail "Ô®ö TMR" 5
tail = true

click-left = ~/.scripts/polybar-timer.sh new 25 'Ô´ú' 'notify-send -i amarok_clock "Session finished"' ; ~/.scripts/polybar-timer.sh update %pid%
click-middle = ~/.scripts/polybar-timer.sh cancel ; ~/.scripts/polybar-timer.sh update %pid%
click-right = ~/.scripts/polybar-timer.sh new 5 'Ô™ß' 'notify-send -i amarok_clock "Break finished"' ; ~/.scripts/polybar-timer.sh update %pid%
scroll-up = ~/.scripts/polybar-timer.sh increase 60 || ~/.scripts/polybar-timer.sh new 1 'Ô®ö' 'notify-send -u critical -i amarok_clock "Timer expired"' ; ~/.scripts/polybar-timer.sh update %pid%
scroll-down = ~/.scripts/polybar-timer.sh increase -60 ; ~/.scripts/polybar-timer.sh update %pid%

format-background = ${colors.background_module-prefix}
format-foreground = ${colors.foreground_module-prefix}
format-padding = 1

[module/todoist]

type = custom/script

exec = python -u ~/.scripts/polybar-todoist.py
tail = true

click-left = gtk-launch todoist

format-background = ${colors.background_module}
format-foreground = ${colors.foreground_module}

